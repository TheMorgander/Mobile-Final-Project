<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:rowCount="3"
    android:columnCount="1"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:text="General"
            android:id="@+id/general_button"
            android:layout_margin="5dp" />
        <Button
            android:text="Converter"
            android:id="@+id/converter_button"
            android:layout_margin="5dp" />

    </GridLayout>
    <TextView
        android:text="Value"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/value_value"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_margin="10dp" />

    <TextView
        android:text="From Units"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/from_text"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />
    <Spinner
        android:id="@+id/from_type"
        android:layout_width="match_parent"
        android:contentDescription="Pick From Units"
        android:layout_margin="10dp"/>

    <TextView
        android:text="To Units"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/to_text"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />
    <Spinner
        android:id="@+id/to_type"
        android:layout_width="match_parent"
        android:contentDescription="Pick To Units" 
        android:layout_margin="10dp"/>

    <TextView
        android:text="Result"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/result_text"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/result_value"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:clickable="false" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom">
        <Button
            android:text="History"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/history_button"
            android:layout_margin="10dp" />
    </GridLayout>
</GridLayout>